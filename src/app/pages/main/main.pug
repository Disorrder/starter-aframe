extends ../../../index.pug

block scene
    a-assets
        img#boxTexture(src="https://i.imgur.com/mYmmbrp.jpg")
        img#skyTexture(src="https://cdn.aframe.io/360-image-gallery-boilerplate/img/city.jpg")
        //- img#skyTexture(src="https://cdn.aframe.io/360-image-gallery-boilerplate/img/sechelt.jpg")
        img#groundTexture(src="https://cdn.aframe.io/a-painter/images/floor.jpg")

    a-sky(src="#skyTexture")
    a-light(type="ambient" color="#445451")
    a-light(type="point" intensity="1" position="2 4 4")
    a-plane(src="#groundTexture" rotation="-90 0 0" width="30" height="30")

    a-box(src="#boxTexture" position="0 2 -5" rotation="0 45 45" scale="2 2 2")
        a-animation(attribute="position" to="0 2.2 -5" direction="alternate" dur="2000" repeat="indefinite")
    a-text(value="Hello, A-Frame!" color="#BBB" position="-0.9 0.2 -3" scale="1.5 1.5 1.5")

block ui
    div ololo
